{
   "$schema": "https://json-schema.org/draft/2019-09/schema",
   "$id": "docs\\jsonschema\\jsonschema_ObjectDiagram.json",
   "title": "ObjectDiagram",
   "type": "object",
   "required": [
      "diagram",
      "nodes",
      "edges",
      "version"
   ],
   "properties": {
      "diagram": {"const": "ObjectDiagram"},
      "nodes": {
         "type": "array",
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "x",
               "y",
               "id",
               "type"
            ],
            "properties": {
               "x": {"type": "integer"},
               "y": {"type": "integer"},
               "id": {"type": "integer"},
               "type": {"enum": [
                  "ObjectNode",
                  "PointNode",
                  "FieldNode",
                  "NoteNode"
               ]},
               "children": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {"type": "integer"}
               },
               "name": {"type": "string"},
               "value": {"type": "string"}
            },
            "allOf": [
               {
                  "if": {"properties": {"type": {"const": "ObjectNode"}}},
                  "then": {"required": ["name"]}
               },
               {
                  "if": {"properties": {"type": {"const": "PointNode"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "FieldNode"}}},
                  "then": {"required": [
                     "name",
                     "value"
                  ]}
               },
               {
                  "if": {"properties": {"type": {"const": "NoteNode"}}},
                  "then": {"required": ["name"]}
               }
            ],
            "unevaluatedProperties": false
         }
      },
      "edges": {
         "type": "array",
         "uniqueItems": true,
         "items": {
            "type": "object",
            "required": [
               "start",
               "end",
               "type"
            ],
            "properties": {
               "start": {"type": "integer"},
               "end": {"type": "integer"},
               "type": {"enum": [
                  "ObjectReferenceEdge",
                  "NoteEdge",
                  "ObjectCollaborationEdge"
               ]},
               "middleLabel": {"type": "string"}
            },
            "allOf": [
               {
                  "if": {"properties": {"type": {"const": "ObjectReferenceEdge"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "NoteEdge"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "ObjectCollaborationEdge"}}},
                  "then": {"required": ["middleLabel"]}
               }
            ],
            "unevaluatedProperties": false
         }
      },
      "version": {"type": "string"}
   },
   "unevaluatedProperties": false
}
