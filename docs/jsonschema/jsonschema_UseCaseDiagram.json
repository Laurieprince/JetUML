{
   "$schema": "https://json-schema.org/draft/2019-09/schema",
   "$id": "docs\\jsonschema\\jsonschema_UseCaseDiagram.json",
   "title": "UseCaseDiagram",
   "description": "UseCaseDiagram",
   "type": "object",
   "required": [
      "diagram",
      "nodes",
      "edges",
      "version"
   ],
   "properties": {
      "diagram": {"const": "UseCaseDiagram"},
      "nodes": {
         "type": "array",
         "description": "description",
         "items": {
            "type": "object",
            "properties": {
               "x": {"type": "integer"},
               "y": {"type": "integer"},
               "id": {"type": "integer"},
               "type": {"enum": [
                  "PointNode",
                  "UseCaseNode",
                  "NoteNode",
                  "ActorNode"
               ]},
               "children": {
                  "type": "array",
                  "uniqueItems": true,
                  "items": {"type": "integer"}
               },
               "name": {"type": "string"}
            },
            "allOf": [
               {
                  "if": {"properties": {"type": {"const": "PointNode"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "UseCaseNode"}}},
                  "then": {"required": ["name"]}
               },
               {
                  "if": {"properties": {"type": {"const": "NoteNode"}}},
                  "then": {"required": ["name"]}
               },
               {
                  "if": {"properties": {"type": {"const": "ActorNode"}}},
                  "then": {"required": ["name"]}
               }
            ],
            "required": [
               "x",
               "y",
               "id",
               "type"
            ],
            "unevaluatedProperties": false
         }
      },
      "edges": {
         "type": "array",
         "description": "description",
         "items": {
            "type": "object",
            "properties": {
               "start": {"type": "integer"},
               "end": {"type": "integer"},
               "type": {"enum": [
                  "UseCaseGeneralizationEdge",
                  "UseCaseAssociationEdge",
                  "UseCaseDependencyEdge",
                  "NoteEdge"
               ]},
               "Dependency Type": {"enum": [
                  "None",
                  "Include",
                  "Extend"
               ]}
            },
            "allOf": [
               {
                  "if": {"properties": {"type": {"const": "UseCaseGeneralizationEdge"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "UseCaseAssociationEdge"}}},
                  "then": {"required": []}
               },
               {
                  "if": {"properties": {"type": {"const": "UseCaseDependencyEdge"}}},
                  "then": {"required": ["Dependency Type"]}
               },
               {
                  "if": {"properties": {"type": {"const": "NoteEdge"}}},
                  "then": {"required": []}
               }
            ],
            "required": [
               "start",
               "end",
               "type"
            ],
            "unevaluatedProperties": false
         }
      },
      "version": {"type": "string"}
   }
}
